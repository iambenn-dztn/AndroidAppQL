<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:text="Thêm sản phẩm"
        />

    <TextView
        android:layout_below="@+id/tv"
        android:id="@+id/tv1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Tên sản phẩm: "
        android:layout_marginTop="10dp"
        android:textSize="22dp"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:id="@+id/tTen"
        android:layout_toRightOf="@+id/tv1"
        android:textSize="22dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/tv2"
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Số lượng: "
        android:layout_below="@+id/tv1"
        android:textSize="22dp"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tSoluong"
        android:layout_toRightOf="@+id/tv2"
        android:textSize="22dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv1"
        android:inputType="number"
        />
    <TextView
        android:id="@+id/tv3"
        android:layout_width="150dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Giá nhập: "
        android:layout_below="@+id/tv2"
        android:textSize="22dp"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tGianhap"
        android:layout_toRightOf="@+id/tv3"
        android:textSize="22dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv2"
        android:inputType="number"
        />
    <TextView
        android:id="@+id/tv4"
        android:layout_width="150dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Giá bán: "
        android:layout_below="@+id/tv3"
        android:textSize="22dp"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tGiaban"
        android:layout_toRightOf="@+id/tv4"
        android:textSize="22dp"
        android:layout_marginLeft="10dp"
        android:inputType="number"
        android:layout_below="@id/tv3"
        />
    <TextView
        android:id="@+id/tv5"
        android:layout_width="150dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Nhà phân phối: "
        android:layout_below="@+id/tv4"
        android:textSize="22dp"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tNhaphanphoi"
        android:layout_toRightOf="@+id/tv5"
        android:textSize="22dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv4"
        />
    <TextView
        android:id="@+id/tv6"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Ghi chú: "
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv5"
        android:textSize="22dp"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tGhichu"
        android:layout_toRightOf="@+id/tv6"
        android:textSize="22dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv5"
        />
    <TextView
        android:id="@+id/tv7"
        android:layout_width="150dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Hình ảnh: "
        android:layout_below="@+id/tv6"
        android:textSize="22dp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/btnChonAnh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv7"
        android:layout_below="@id/tv6"
        android:layout_marginLeft="20dp"
        android:text="Chọn ảnh"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/tAnh"
        android:layout_below="@+id/tv7"
        android:layout_toRightOf="@+id/tv7"
        />
    <Button
        android:id="@+id/btnThemSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tAnh"
        android:background="@color/white"
        android:layout_centerHorizontal="true"
        />

    </RelativeLayout>